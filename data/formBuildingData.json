{
  "heading": "Залиште ваші контактні дані, ми з вами зв'яжемося протягом години!",
  "inputs": [
    {
      "id": "i01",
      "label": "Ім’я",
      "placeholder": "Валентин",
      "name": "userName",
      "options": {
        "required": "Це поле обов’язкове",
        "pattern": {
          "value": "^(?![s-]*[s-])(?!.*--)(?!.*- )(?!.* -)[A-Za-zА-Яа-яЇїІіЄєҐґ' -]+$",
          "message": "Невірно введене ім’я"
        },
        "minLength": { "value": 2, "message": "Не менше 2 символів" },
        "maxLength": { "value": 70, "message": "Не більше 70 символів" }
      }
    },
    {
      "id": "i02",
      "type": "tel",
      "label": "Номер телефону",
      "placeholder": "+380990000000",
      "name": "phoneNumber",
      "options": {
        "required": "Це поле обов’язкове",
        "pattern": {
          "value": "^\\+[0-9]+$",
          "message": "Невірно введений номер"
        },
        "minLength": { "value": 12, "message": "Не менше 12 символів" },
        "maxLength": { "value": 13, "message": "Не більше 13 символів" }
      }
    }
  ],
  "textarea": {
    "id": "t01",
    "label": "Коментар",
    "placeholder": "Ваш коментар...",
    "name": "userComment",
    "options": {
      "pattern": {
        "value": "^[A-Za-zА-Яа-яЇїІіЄєҐґ0-9()s',.!? \n-]+$",
        "message": "Присутні недопустимі символи"
      },
      "maxLength": { "value": 500, "message": "Не більше 500 символів" }
    }
  },
  "button": { "content": "Записатися" }
}
